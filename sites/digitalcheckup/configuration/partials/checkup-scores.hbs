{{#if @root.request.body ~}}
{{#if @root.request.body.section-1-score ~}}
<input type="hidden" name="section-1-score" value="{{@root.request.body.section-1-score}}" />
{{/if ~}}
{{#if @root.request.body.section-2-score ~}}
<input type="hidden" name="section-2-score" value="{{@root.request.body.section-2-score}}" />
{{/if ~}}
{{#if @root.request.body.section-3-score ~}}
<input type="hidden" name="section-3-score" value="{{@root.request.body.section-3-score}}" />
{{/if ~}}
{{#if @root.request.body.section-4-score ~}}
<input type="hidden" name="section-4-score" value="{{@root.request.body.section-4-score}}" />
{{/if ~}}
{{#if @root.request.body.section-5-score ~}}
<input type="hidden" name="section-5-score" value="{{@root.request.body.section-5-score}}" />
{{/if ~}}
{{#ifAny @root.request.body.scores @root.request.body.scores-q1 ~}}
<input type="hidden" name="{{section}}-score" value="{{add (sumArray (arrayify @root.request.body.scores)) (sumArray (arrayify @root.request.body.scores-q1)) (sumArray (arrayify @root.request.body.scores-q2)) (sumArray (arrayify @root.request.body.scores-q3)) (sumArray (arrayify @root.request.body.scores-q4)) (sumArray (arrayify @root.request.body.scores-q5))}}" />
{{/ifAny ~}}
{{#compare section "section-6" ~}}
<input type="hidden" name="turnover" value="{{@root.request.body.scores-turnover}}" />
<input type="hidden" name="priority" value="{{@root.request.body.scores-priority}}" />
{{else}}
{{#if @root.request.body.turnover ~}}
<input type="hidden" name="turnover" value="{{@root.request.body.turnover}}" />
{{/if ~}}
{{#if @root.request.body.priority ~}}
<input type="hidden" name="priority" value="{{@root.request.body.priority}}" />
{{/if ~}}
{{/compare ~}}
{{/if ~}}