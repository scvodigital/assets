{{#with (getProperty @root.context.metaData.checkup section) ~}}
<div class="checkup-section b-padding-full" id="checkup-{{../section}}">
  <div class="checkup-section-header b-padding-full v-margin-full">
    <div class="container-fluid">
      <div class="container-content">
        {{#if progress ~}}
        {{> checkup_progress progress=progress}}
        {{/if ~}}
        {{#if name ~}}
        <div class="mdc-typography--body2">{{{name}}}</div>
        {{/if ~}}
        {{#if title ~}}
        <h1 class="mdc-typography--headline3">{{{title}}}</h1>
        {{/if ~}}
        {{#if description ~}}
        <div class="mdc-typography--body1">{{{description}}}</div>
        {{/if ~}}
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="container-content">
      {{#each questions ~}}
      <div class="question">
        {{#if title ~}}
        <h2 class="mdc-typography--headline5">{{{title}}}</h2>
        {{/if ~}}
        {{#if description ~}}
        <div class="mdc-typography--body1">{{{description}}}</div>
        {{/if ~}}
        {{#ifAny (compare type "select-one") (compare type "select-many") ~}}
        <ul>
          {{#each options ~}}
          {{#switch ../type ~}}
          {{#case "select-one" ~}}
          {{#if answer ~}}
          <li>* {{{answer}}}</li>
          {{/if ~}}
          {{/case ~}}
          {{#case "select-many" ~}}
          {{#if answer ~}}
          <li>[ ] {{{answer}}}</li>
          {{/if ~}}
          {{/case ~}}
          {{/switch ~}}
          {{/each ~}}
        </ul>
        {{/ifAny ~}}
      </div>
      {{/each ~}}
      <div class="cta v-padding-full">
        <a href="/checkup/{{next_section}}" class="mdc-button mdc-button--raised">Next section</a>
      </div>
    </div>
  </div>
</div>
{{/with ~}}