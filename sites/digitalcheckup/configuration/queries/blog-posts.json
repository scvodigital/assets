{
  "size": 10,
  "from": {{multiply (subtract (default @root.request.params.query.page 1) 1) 10}},
  "_source": [
    "title",
    "description_truncated",
    "author_name_full",
    "author_job_title",
    "author_organisation_name",
    "author_slug",
    "slug"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        },
        {
          "term": {
            "is_press_release": true
          }
        }
      ],
      "must": [
        {
          "terms": {
            "categories_slug": [
              "digital-evolution"
            ]
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}
