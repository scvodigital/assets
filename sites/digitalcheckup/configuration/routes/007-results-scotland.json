{
  "name": "checkup_results_scotland",
  "pattern": "/checkup/results-scotland",
  "debug": true,
  "metaData": {
    "title": "Digital Checkup"
  },
  "tasks": [
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "data_averages",
            "index": "web-content-production",
            "type": "scvo-checkup-onedigital",
            "template": ">context.metaData.handlebars.queries.data_checkup-onedigital"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "body": ">context.metaData.handlebars.templates.checkup_results",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}