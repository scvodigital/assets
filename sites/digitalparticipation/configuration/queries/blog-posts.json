{
  "size": 10,
  "from": {{multiply (subtract (default @root.request.params.query.page 1) 1) 10}},
  "_source": [
    "title",
    "description_truncated",
    "publish_on",
    "author_name_full",
    "slug"
  ],
  "query": {
    "bool": {
      "must_not": [
        {
          "term": {
            "hide_in_results": true
          }
        },
        {
          "term": {
            "hide_from_search": "1"
          }
        },
        {
          "term": {
            "is_press_release": true
          }
        }
      ],
      "filter": [
        {
          "terms": {
            "categories_slug": [
              "digital-participation",
              "blog-posts"
            ]
          }
        },
        {
          "term": {
            "post_tags_slug": "case-studies"
          }
        }
      ]
    }
  },
  "sort": {
    "publish_on": "desc"
  }
}
