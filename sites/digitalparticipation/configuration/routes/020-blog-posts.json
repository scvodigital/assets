{
  "name": "blog_posts",
  "pattern": "/stories",
  "metaData": {
    "title": "Stories â€“ Scotland's Digital Participation Charter"
  },
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../../elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.blog-posts"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags",
              "body": ">context.metaData.handlebars.templates.stories_index",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}