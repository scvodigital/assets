<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner title">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6 mdc-layout-grid__cell--span-4-phone">
      <h1>Resources</h1>
      <h4>
        <a href="/resources/downloads" class="mdc-button">Downloads</a>
      </h4>
      <img src="https://storage.googleapis.com/digitalparticipation/images/illustrations/Resource-Banner.png" alt="Resources illustration" class="responsive-img hide-on-med-and-up" />
    </div>
    <div class="mdc-layout-grid__cell hide-on-small-only mdc-layout-grid__cell--span-6 mdc-layout-grid__cell--span-4-phone">
      <img src="https://storage.googleapis.com/digitalparticipation/images/illustrations/Resource-Banner.png" alt="Resources illustration" class="responsive-img pull-right" />
    </div>
  </div>
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
      <hr />
    </div>
  </div>
  <div class="mdc-layout-grid__inner resources description">
    {{#each @root.data.supplimentaryResponses.links.hits.hits ~}}
    {{#with _source ~}}
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4">
      <h4><a href="{{link}}" rel="noopener">{{{title}}}</a></h4>
      <p><strong>{{{author_attribution}}}</strong></p>
      {{{content}}}
      <p>
        <a href="{{link}}" rel="noopener">Read more</a>
      </p>
    </div>
    {{/with ~}}
    {{/each ~}}
  </div>
</div>