<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner title description" style="margin-bottom: -2.5rem;">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-10-desktop mdc-layout-grid__cell--span-6-tablet mdc-layout-grid__cell--span-4-phone">
      <h1 class="align-bottom">Stories</h1>
    </div>
    <div class="mdc-layout-grid__cell hide-on-small-only mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-4-phone">
      <img src="https://storage.googleapis.com/digitalparticipation/images/illustrations/Pledges-RGB-04.png" alt="Our Pledges illustration" class="responsive-img" />
    </div>
  </div>
  {{#each @root.data.primaryResponse.hits.hits ~}}
  {{#with _source ~}}
  <div class="mdc-layout-grid__inner expand skills">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
      <hr class="margin-top" />
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
      <h3>
        {{#if author_organisation_name}}{{{author_organisation_name}}}{{else}}SCVO{{/if}}
      </h3>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
      <p>
        <strong>{{{title}}}</strong><br />
        &ndash; {{#if author_name_full}}by {{{author_name_full}}}{{#if author_job_title}} ({{{author_job_title}}}){{/if}},{{/if}} posted {{momentFromNow publish_on}}<br /><br />
        {{{description_truncated}}}&ensp;<a href="/{{replace slug "_" "/"}}">Read more</a>
      </p>
    </div>
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
      <blockquote>
        <p>“{{quotation.text}}”</p>
        <cite>{{quotation.author}}</cite>
      </blockquote>
    </div>
  </div>
  {{/with ~}}
  {{/each ~}}
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
      <hr class="margin-top" />
    </div>
  </div>

  {{> pagination paging=@root.data.primaryResponse.pagination firstLastNavigation=false}}
</div>