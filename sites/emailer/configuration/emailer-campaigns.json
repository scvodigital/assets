    "elasticsearchIndex": "web-content-production",
    "elasticsearchType": "fundingscotland-fund,scvo-cms-post",
    "metaData": {
      "logoUrl": "https://storage.googleapis.com/fundingscotland/logos/scvo.png",
      "primaryColour": "#537F2C",
      "secondaryColour": "#F49039",
      "baseUrl": "https://fundingscotland.com",
      "siteConfiguration": "{:../../fundingscotland/configuration/site-configurations.json@default}",
      "sections": [
        {
          "title": "Example fixed title",
          "headerBlock": "I am some header <strong>HTML</strong> to demonstrate a fixed header",
          "alwaysShow": true
        },
        {
          "title": "Press releases",
          "expression": "$[_type='scvo-cms-post' and 'press-releases' in _source.categories_slug][]"
        },
        {
          "title": "Blog posts",
          "expression": "$[_type='scvo-cms-post' and 'posts' in _source.categories_slug][]"
        },
        {
          "title": "Your latest funds",
          "headerBlock": "Here are recently added funds that match your saved search preferences",
          "headerBlockNoItems": "There haven't been any funds added since your previous alert",
          "expression": "$[_type='fundingscotland-fund'][[1..5]][]"
        }
      ]
    }
  },
