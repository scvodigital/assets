{{#withExtend this siteConfig=templateMetaData.config.metaData.siteConfiguration}}
{
  "size": 1000,
  "_source": [
    "title",
    "og_title",
    "description",
    "updated",
    "slug",
    "funder_organisation.name",
    "funder_organisation.slug",
    "categories_slug",
    "news",
    "date_created",
    "date_last_modified",
    "date_news_last_updated",
    "date_reopens",
    "date_last_important_activity"
  ],
  "query": {
    "bool": {
      "should": [
        {
          "bool": {
            "filter": [
              {
                "term": {
                  "_type": {
                    "value": "fs-{{siteConfig.name}}-post"
                  }
                }
              },
              {
                "range": {
                  "updated": {
                    {{#ifAny @root.request.params.query.lastsent templateMetaData.lastSent}}
                    "gte": {{momentFormat (moment (default @root.request.params.query.lastsent templateMetaData.lastSent) "") "x"}}
                    {{else}}
                    "gte": "now-1w/d"
                    {{/ifAny}}
                  }
                }
              }
            ]
          }
        },
        {{#>queries_fund_fixed_filters fixedFilters=siteConfig.fixedFilters}}
          "bool": {
          "filter": [
            {
              "term": {
                "_type": {
                  "value": "fundingscotland-fund"
                }
              }
            },
            {{> @partial-block}}
          ]
        }
        {{/queries_fund_fixed_filters}}
      ],
      "minimum_should_match": 1
    }
  },
  "sort": [
    {
      "date_last_modified": "desc"
    },
    {
      "updated": "desc"
    }
  ]
}
{{/withExtend}}