{{#withExtend this siteConfig=templateMetaData.config.metaData.siteConfiguration}}
  {{#>queries_fund_wrapper templateMetaData=templateMetaData}}
    {
      "bool": {
        "should": [
          {
            "range": {
              "date_last_important_activity": {
                {{#ifAny @root.request.params.query.lastsent templateMetaData.lastSent}}
                "gte": {{momentFormat (moment (default @root.request.params.query.lastsent templateMetaData.lastSent) "") "x"}}
                {{else}}
                "gte": "now-1w/d"
                {{/ifAny}}
              }
            }
          },
          {
            "range": {
              "date_reopens": {
                "lte": "now+3M/d",
                "gte": "now/d"
              }
            }
          }
        ],
        "minimum_should_match": 1
      }
    }
  {{/queries_fund_wrapper}}
{{/withExtend}}