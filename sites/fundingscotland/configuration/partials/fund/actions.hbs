<div class="mdc-card__actions">
  <div class="mdc-card__action-buttons mdc-card__actions--full-bleed">
    {{#compare action "===" "funder" ~}}
    <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}" class="mdc-card__action hide-sm">Find out more about {{funder_organisation.name}}</a>
    {{else}}
    <a href="/fund/{{slug}}{{@root.request.url.search}}" class="mdc-card__action hide-sm">Find out more</a>
    <a href="/fund/{{slug}}{{@root.request.url.search}}" class="mdc-card__action hide-md hide-lg"><span class="fal fa-info-circle fa-fw fa-2x" aria-hidden="true"></span></a>
    {{#compare (trim (getProperty @root.data.profile.notes Id)) "!==" "" ~}}
    <a href="/fund/{{slug}}{{@root.request.url.search}}#notes" class="mdc-card__action mdc-card__action-notes hide-sm">Your notes</a>
    <a href="/fund/{{slug}}{{@root.request.url.search}}#notes" class="mdc-card__action mdc-card__action-notes hide-md hide-lg"><span class="fal fa-edit fa-fw fa-2x" aria-hidden="true"></span></a>
    {{/compare ~}}
    {{/compare ~}}
  </div>
  <div class="mdc-card__action-icons pull-right">
    {{#if @root.data.auth ~}}
      {{> fund_action_hide_fund id=Id name=title}}
      {{#compare @root.route.name "!==" "fund" ~}}
        {{> fund_action_manage_lists id=Id slug=slug}}
      {{/compare ~}}
    {{/if}}
  </div>
</div>