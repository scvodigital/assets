<div class="mdc-card gist" data-fund-id="{{Id}}">
  <div class="mdc-card__info--content-primary-row">
    <div class="mdc-card__media mdc-card__media--square demo-card__media search-result-card__media--funder" style="background-image:url({{funder_organisation.logo_url}});"></div>
    <div class="mdc-card__info--content-primary">
      <div class="mdc-card__info--content-primary-title mdc-typography--headline7">
        {{{title}}}
      </div>
      <div class="mdc-card__info--content-primary-funder mdc-typography--body1">
        <a href="/funder/{{funder.slug}}{{@root.request.url.search}}">{{funder.name}}</a>
      </div>
      <div class="mdc-card__info--content-primary-details mdc-typography--caption">
        <span class="far fa-calendar-alt fa-fw" title="Closing date"></span>
        {{{momentFormat (moment closing_date "x") "Do MMMM YYYY"}}}
      </div>
    </div>
  </div>
  {{> vacancy_actions slug=slug Id=Id}}
</div>
