<div class="mdc-card__info--content-primary-row">
  <div class="mdc-card__info--content-primary">
    {{#if fund_status ~}}
    <span class="pull-right v-margin mdc-typography--caption fund-status fund-{{fund_status_slug}}">Currently {{{lowercase (replace fund_status "Currently" "")}}}</span>
    {{/if ~}}

    {{#if title ~}}
    <h2 class="mdc-card__info--content-primary-title mdc-typography--headline5">
      <a href="/fund/{{slug}}{{@root.request.url.search}}">
        <span class="hover-underline">{{title}}</span>
      </a>
    </h2>
    {{/if ~}}
    {{#ifAll funder_organisation.name funder_organisation.slug ~}}
    <ul class="fa-ul funder">
      <li class="mdc-card__info--content-primary-funder mdc-typography--body1">
        <span class="fa-li"><span class="far fa-building fa-fw" title="Funder"></span></span>
        <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">{{funder_organisation.name}}</a>
      </li>
    </ul>
    {{/ifAll ~}}
    <div class="fund-details">
        {{#if (length (arrayify type_of_funding)) ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Type of funding:</strong>
            {{#each (arrayify type_of_funding) ~}}
              {{{this}}}{{#unless @last}}, {{/unless}}
            {{/each}}
          </span>
        {{/if ~}}
        {{#if source_of_fund ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Source:</strong>
            {{{source_of_fund}}}
          </span>
        {{/if ~}}
        {{#if (length (arrayify type_of_cost)) ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Type of cost:</strong>
            {{#each (arrayify type_of_cost) ~}}
              {{{this}}}{{#unless @last}}, {{/unless}}
            {{/each}}
          </span>
        {{/if ~}}
        {{!--#if when_to_apply ~}}
          <span class="key-info-bit r-margin-full">
            <strong>When to apply:</strong>
            {{{when_to_apply}}}
          </span>
        {{/if ~--}}
        {{#if next_deadline ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Next deadline:</strong>
            {{#if @root.data.auth ~}}
              {{{momentFormat (moment next_deadline 'x') 'Do MMM YYYY'}}}
            {{else}}
              in {{{momentFormat (moment next_deadline 'x') 'MMMM YYYY'}}}
            {{/if ~}}
          </span>
        {{/if ~}}
        {{#if for_charities_only ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Charities only:</strong>
            {{{for_charities_only}}}
          </span>
        {{/if ~}}
        {{#if exclusions ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Exclusions:</strong>
            {{{exclusions}}}
          </span>
        {{/if ~}}
        {{#if website ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Website:</strong>
            {{{website}}}
          </span>
        {{/if ~}}
        {{#if email ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Email:</strong>
            {{{email}}}
          </span>
        {{/if ~}}
        {{#if phone ~}}
          <span class="key-info-bit r-margin-full">
            <strong>Phone:</strong>
            {{{phone}}}
          </span>
        {{/if ~}}
        {{!-- #if how_to_apply ~}}
          <span class="key-info-bit r-margin-full">
            <strong>How to apply:</strong>
            {{{how_to_apply}}}
          </span>
        {{/if ~ --}}
      </dl>
    </div>
  </div>
</div>