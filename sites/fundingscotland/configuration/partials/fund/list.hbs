<div class="mdc-card list" data-fund-id="{{Id}}">
  {{> fund_key_info}}
  <hr class="mdc-list-divider" />
  {{#compare (trim (getProperty @root.data.notes Id)) "!==" "" ~}}
    {{> fund_description limit="3rem" description=description}}
    {{> fund_notes limit="3rem"}}
  {{else}}
    {{#if @root.data.auth ~}}
      {{> fund_description limit="10.5rem" description=description}}
    {{else}}
      {{> fund_description limit="5rem" description=(truncate description "130")}}
    {{/if}}
  {{/compare ~}}
  {{> fund_actions slug=slug Id=Id title=title}}
</div>