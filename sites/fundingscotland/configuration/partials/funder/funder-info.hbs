{{#unless (regexMatch (default charity_number "null") "(^NULL$)|(^.*?\bNOT\b.*?$)" "ig") ~}}
  <p class="organisation-type">
    {{#if (regexMatch charity_number "^SC[0-9]{6}" "ig")}}
      <small class="organisation-type-sco-charity">
        <span class="far fa-badge-check" aria-hidden="true"></span>
        Charity registered in Scotland <a target="_blank" href="{{>charity_link this}}">{{charity_number}}</a>
      </small>
    {{/if}}

    {{#if (regexMatch charity_number "^[0-9]+$" "ig")}}
      <small class="organisation-type-ruk-charity">
        <i class="far fa-badge-check" aria-hidden="true"></i>
        Charity number <a href="{{>charity_link this}}" target="_blank">{{charity_number}}</a>
      </small>
    {{/if}}

    {{#if (contains (lowercase charity_number) "ngo")}}
      <small class="organisation-type-ngo">
        <i class="far fa-badge" aria-hidden="true"></i>
        NGO
      </small>
    {{/if}}

    {{#unless (regexMatch charity_number "^(SC[0-9]{6})|([0-9]+)|(NGO)$" "ig")}}
      <small class="organisation-type-sco-other">
        <i class="far fa-badge" aria-hidden="true"></i>
        Organisation type: {{charity_number}}
      </small>
    {{/unless}}
  </p>
{{/unless ~}}