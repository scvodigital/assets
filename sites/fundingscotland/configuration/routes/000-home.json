{
  "name": "home",
  "pattern": "/",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "reroute",
      "taskModule": "reroute",
      "config": {
        "if": [
          { "missing": ["data.auth.uid"] },
          "home-not-authenticated",
          "home-authenticated"
        ]
      }
    }
  ]
}