{
  "name": "four_oh_four",
  "debug": false,
  "pattern": "/404",
  "defaultStatusCode": 404,
  "metaData": {
    "hideSearch": true
  },
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.menus",
    {
      "name": "not_found",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../../elasticsearch-index.txt}",
          "type": "fs-page-default,fs-page-eastrenfrewshire,fs-page-fife,fs-page-northlanarkshire,fs-page-shetland,fs-page-southlanarkshire,fs-page-srn,fs-page-stirling",
          "template": ">context.metaData.handlebars.queries.errors_404"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_page-head-tags",
              "body": ">context.metaData.handlebars.templates.errors_404",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}