{
  "name": "lists",
  "pattern": "/lists",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.shortlistData",
    {
      "name": "shortlistPartitions",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "items": ">context.metaData.handlebars.queries.notifications_get-shortlist-partitions"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "name": "saved",
          "index": "web-content-production",
          "type": "fundingscotland-fund",
          "template": ">context.metaData.handlebars.queries.funds_saved",
          "metaData": {
            "size": 1000
          }
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "body": ">context.metaData.handlebars.templates.account_lists",
              "head": ">context.metaData.handlebars.templates.pages_home-head-tags",
              "foot": ">context.metaData.handlebars.templates.account_lists-foot",
              "sidebar": ">context.metaData.handlebars.templates.funds_search-form"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}