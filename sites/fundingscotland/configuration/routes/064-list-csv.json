{
  "name": "list_csv",
  "pattern": "/list-csv/:name",
  "debug": true,
  "metaData": {
    "pdf": {
      "title": ">data.currentSite.title",
      "subtitle": ">data.headings.subtitle"
    }
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.profileData",
    {
      "name": "shortlistPartition",
      "taskModule": "mysql",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "items": ">context.metaData.handlebars.queries.notifications_get-shortlist-partition"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "search_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "detailed_results",
            "index": "web-content-production",
            "type": "fundingscotland-fund",
            "template": ">context.metaData.handlebars.queries.funds_list-full",
            "metaData": {
              "size": 1000
            }
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.data",
            "parts": {
              "content": ">context.metaData.handlebars.templates.funds_list-csv"
            },
            "contentType": "text/csv"
          }
        }
      }
    }
  ]
}