{
  "name": "posts",
  "pattern": "/news",
  "debug": false,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.bulletinName",
    "context.metaData.commonTasks.menus",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../../../elasticsearch-index.txt}",
          "type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature,fs-post-default,fs-post-eastayrshire,fs-post-eastrenfrewshire,fs-post-fife,fs-post-northlanarkshire,fs-post-shetland,fs-post-southlanarkshire,fs-post-srn,fs-post-stirling",
          "template": ">context.metaData.handlebars.queries.posts_latest"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_home-head-tags",
              "body": ">context.metaData.handlebars.templates.posts_posts"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}