{
  "name": "posts",
  "pattern": "/news",
  "debug": false,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.profileData",
    "context.metaData.commonTasks.menus",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "tfn_latest",
            "index": "web-content-production",
            "type": "tfn-news-post,tfn-feature",
            "template": ">context.metaData.handlebars.queries.posts_tfn-latest"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_page-head-tags",
              "body": ">context.metaData.handlebars.templates.pages_posts"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}