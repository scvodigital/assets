{
  "name": "save-notes",
  "pattern": "/save-notes",
  "acceptedVerbs": "POST",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authRequired",
    {
      "name": "notes",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{data.auth.uid}}/{{data.currentSite.name}}/notes/{{request.body.id}}/{{moment null 'x'}}",
        "setOrUpdate": "set",
        "dataTemplate": "{ \"status\": {{{stringify @root.request.body.status}}}, \"note\": {{{stringify (stripTags @root.request.body.notes)}}} }"
      }
    },
    {
      "name": "url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/fund/{{{@root.request.body.slug}}}#notes"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.url"
      }
    }
  ]
}