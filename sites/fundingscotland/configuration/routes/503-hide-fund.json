{
  "name": "hide_fund",
  "pattern": "/hide-fund",
  "acceptedVerbs": "POST",
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authRequired",
    {
      "name": "notes",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{data.auth.uid}}/{{data.currentSite.name}}/hidden/{{request.body.id}}",
        "setOrUpdate": "set",
        "dataTemplate": "true"
      }
    },
    {
      "name": "url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{default request.body.redirect '/search'}}"
      }
    },
    {
      "name": "redirect",
      "taskModule": "redirect",
      "renderer": "handlebars",
      "config": {
        "location": ">data.url"
      }
    }
  ]
}