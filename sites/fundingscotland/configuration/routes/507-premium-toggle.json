{
  "name": "premium_toggle",
  "pattern": "/premium-toggle",
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.profileData",
    {
      "name": "togglePremium",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{default data.auth.uid 'no-such-profile'}}/{{@root.data.currentSite.name}}/isPremium",
        "setOrUpdate": "set",
        "dataTemplate": "{{if @root.data.profile.isPremium 'false' else='true'}}"
      }
    },
    {
      "name": "url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{{default @root.request.headers.referer '/'}}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.url"
      }
    }
  ]
}