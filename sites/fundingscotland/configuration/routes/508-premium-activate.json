{
  "name": "premium_activate",
  "pattern": "/activate-premium",
  "debug": false,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.profileData",
    {
      "name": "togglePremium",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{default data.auth.uid 'no-such-profile'}}/{{@root.data.currentSite.name}}/isPremium",
        "setOrUpdate": "set",
        "dataTemplate": "{{#compare @root.data.auth.passwordHash @root.request.params.query.passwordHash}}{{dateMath 'now+1y'}}{{else}}false{{/compare}}"
      }
    },
    {
      "name": "updateSubscription",
      "taskModule": "mysql",
      "renderer": "handlebars",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "subscriptions": "UPDATE subscriptions SET metaData={{{mysqlEscape (concat '' (dateMath 'now+1y'))}}} WHERE campaign='fs-bulletin-default' AND email={{{mysqlEscape @root.data.auth.email}}}"
        }
      }
    },
    {
      "name": "url",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/premium-activated"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": ">data.url"
      }
    }
  ]
}