{
  "name": "admin_update_premium_status",
  "pattern": "/admin/update-premium-status",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authRequired",
    {
      "name": "profile",
      "taskModule": "firebaseRtbGet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{default data.auth.uid 'no-such-profile'}}",
        "defaultData": {}
      }
    },
    {
      "name": "reroute",
      "taskModule": "reroute",
      "config": {
        "if": [
          { "missing": ["data.profile.isAdmin"] },
          "home_authenticated",
          false
        ]
      }
    },
    {
      "name": "premiumStatus",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": false,
        "template": "{{#if @root.request.body.expiry}}{{momentFormat (moment @root.request.body.expiry 'YYYY-MM-DD') 'x'}}{{else}}{}{{/if}}"
      }
    },
    {
      "name": "updateProfile",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "fundingscotland",
        "pathTemplate": "/users/{{default @root.request.body.uid 'no-such-profile'}}/default/isPremium",
        "setOrUpdate": "set",
        "dataTemplate": "{{{@root.data.premiumStatus}}}"
      }
    },
    {
      "name": "updateSubscription",
      "taskModule": "mysql",
      "renderer": "handlebars",
      "config": {
        "connectionName": "notifications",
        "queryTemplates": {
          "subscriptions": "UPDATE subscriptions SET metaData={{{mysqlEscape (concat '' @root.data.premiumStatus)}}} WHERE campaign='fs-bulletin-default' AND email={{{mysqlEscape @root.request.body.email}}}"
        }
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "template": "{ {{#if @root.errors}}\"errors\": {{{safeStringify @root.errors}}}{{/if}} }",
        "parseJson": true,
        "output": "body"
      }
    }
  ]
}