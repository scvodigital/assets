<script>
  var $admin = $('#admin');

  $admin.on('change', function(evt) {
    $.ajax({
      url: '/admin/set-administrator',
      type: 'POST',
      data: {
        admin: $admin.prop('checked') ? 'true' : 'false',
        uid: {{{safeStringify @root.data.userAuth.uid}}}
      },
      dataType: 'json',
      success: function(data, status, xhr) {
        alert('Done');
      },
      error: function(xhr, status, err) {
        alert(err);
      }
    });
  });

</script>