{{#if @root.data.auth ~}}
  <div class="container-fluid">
    {{#compare data.primaryResponse.hits.total ">" 0}}
      <div class="container-content">
        {{#if funder_organisation.has_logo ~}}
        <div class="mdc-card__media mdc-card__media--funder pull-right hide-sm">
          <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">
            <img src="{{funder_organisation.logo_url}}" alt="{{funder_organisation.name}}" />
          </a>
        </div>
        {{/if ~}}
        <h2 class="mdc-card__info--content-primary-title mdc-typography--headline5">
          <a href="/fund/{{slug}}{{@root.request.url.search}}">
            <span class="hover-underline">{{title}}</span>
            {{#ifAll fund_status fund_status_slug ~}}
              <span class="mdc-typography--caption fund-status fund-{{fund_status_slug}}">Status: {{{fund_status}}}</span>
            {{/ifAll ~}}
          </a>
        </h2>
        <ul class="fa-ul funder">
          <li class="mdc-card__info--content-primary-funder mdc-typography--body1">
            <span class="fa-li"><span class="far fa-building fa-fw" title="Funder"></span></span>
            <a href="/funder/{{funder_organisation.slug}}{{@root.request.url.search}}">{{funder_organisation.name}}</a>
          </li>
        </ul>
        <div class="fundingscotland-fund">
          {{#>components_tab_bar id="fund-tab-bar" defaultTabIdentifier="tab"}}
            {{>components_tab tabName="details" label="Details" active="true"}}
            {{>components_tab tabName="notes" label="Notes" active="false"}}
            {{>components_tab tabName="lists" label="Lists" acrive="false"}}
          {{/components_tab_bar}}
          <div class="panels" for="fund-tab-bar">
            <div class="panel panel--active" role="tabpanel" aria-hidden="false" data-tab-name="details">
              {{#each data.primaryResponse.hits.hits ~}}
              {{> fund_full _source hideTitle=true}}
              {{/each ~}}
            </div>
            <div class="panel" role="tabpanel" aria-hidden="true" data-tab-name="notes">
              <h3>Notes</h3>
            </div>
            <div class="panel" role="tabpanel" aria-hidden="true" data-tab-name="lists">
              <h3>Lists</h3>
            </div>
          </div>
        </div>
      </div>
      
      <div class="container-content">
        <div class="fundingscotland-related-funds">
          <div class="mdc-typography--headline5 v-margin-full">
            Similar funds
          </div>
          <div class="mdc-layout-grid equal-height">
            <div class="mdc-layout-grid__inner">
              {{#each data.supplimentaryResponses.related.hits.hits ~}}
              <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
                {{> fund_list _source}}
              </div>
              {{/each ~}}
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <p>
        <strong>Error:</strong> the requested job could not be found - it may have expired.
      </p>
    {{/compare}}
  </div>
{{else}}
  {{> account_not_signed_in}}
{{/if ~}}