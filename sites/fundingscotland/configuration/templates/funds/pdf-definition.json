{
  "pageSize": "A4",
  "pageMargins": [30, 120, 30, 100],
  "styles": {
    "title": {
      "fontSize": 20,
      "bold": true
    },
    "subtitle": {
      "fontSize": 16
    },
    "h1": {
      "fontSize": 18,
      "bold": true,
      "margin": [0, 10, 0, 5]
    },
    "h2": {
      "fontSize": 16,
      "bold": true,
      "margin": [0, 10, 0, 5]
    },
    "h3": {
      "fontSize": 14,
      "bold": true
    }
  },
  "content": [{
      "height": 150,
      "width": 150,
      "fit": [150, 150],
      "image": "logo",
      "alignment": "center",
      "margin": [0, 15]
    },
    {{>pdf_text fontSize=26 bold=true alignment="center" margin="0,15" text=@root.request.params.query.title default="No title"}},
    {{>pdf_text fontSize=18 bold=true alignment="center" margin="0,15" pageBreak="after" text=@root.request.params.query.subtitle default=" "}},
    {{#each @root.data.search_data.detailed_results.hits.hits}}
      {{>fund_pdf _source}},
    {{/each}}
    {
      "columns": [
        {
          "width": "33%",
          "text": [
            {
              "text": "Contact Us\n",
              "fontSize": 14,
              "bold": true
            }, {
              "text": "fundingscotland@scvo.org.uk\n",
              "link": "mailto:fundingscotland@scvo.org.uk",
              "fontSize": 10
            },
            {
              "text": "0800 169 0022\n",
              "link": "tel:08001690022",
              "fontSize": 10
            },
            {
              "text": "@fundingscotland",
              "link": "https://twitter.com/fundingscotland",
              "fontSize": 10
            }
          ]
        },
        {
          "width": "66%",
          "text": [
            {
              "text": "About Us\n",
              "fontSize": 14,
              "bold": true
            }, 
            {
              "text": "Funding Scotland lists funders with a track record of supporting projects in Scotland. It includes grants, loans, prizes and other support. It is a valuable resource for charities, community groups, social enterprises and voluntary organisations of all shapes and sizes. It does not include funding opportunities for individuals or businesses.\n",
              "fontSize": 10
            },
            {
              "text": "This website is owned and maintained by the Scottish Council for Voluntary Organisations the umbrella body for Scotland\"s third sector.\n",
              "fontSize": 10
            }
          ]
        }
      ],
      "margin": [30, 240]
    }
  
  ]
}