[
  {
    "$if": "currentPage > 1",
    "then": {
      "columns": [
        {
          "width": "*",
          "text": [
            {
              "text": "${request.params.query.title}\n",
              "fontSize": 20,
              "bold": true
            },
            {
              "text": "${request.params.query.subtitle}",
              "fontSize": 16
            }
          ]
        },
        {
          "width": 100,
          "height": 100,
          "fit": [65, 65],
          "image": {
            "$eval": "images.logo"
          },
          "alignment": "right"
        }
      ],
      "margin": [30, 30, 30, 5]
    }
  },
  {
    "$if": "currentPage > 1",
    "then": {
      "canvas": [
        {
          "type": "line",
          "x1": -15,
          "y1": 5,
          "x2": 550,
          "y2": 5,
          "lineWidth": 1
        }
      ],
      "margin": [30, 5]
    }
  }
]