{
  "name": "geo-lookup",
  "pattern": "/geo-lookup",
  "debug": true,
  "tasks": [
    {
      "name": "search_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "name": "detailed_results",
          "index": "geo_lookup",
          "type": "postcode,place",
          "template": ">context.metaData.handlebars.queries.geo-lookup"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": ">context.metaData.handlebars.templates.geo-lookup",
        "parseJson": "true"
      }
    }
  ]
}