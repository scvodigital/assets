{
  "name": "sign-up-details",
  "pattern": "/sign-up-details",
  "debug": true,
  "metaData": {
    "hideSearch": true,
    "title": "Sign up - Saltire Awards"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.redirectIfPVNeeded",
    {
      "name": "setSignUpStatus",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/{{default data.auth.uid 'no-such-write-profile'}}/signup-status",
        "setOrUpdate": "set",
        "dataTemplate": "{{#json}}{{{json key=\"status\" value=\"sd-needed\"}}}{{/json}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.account_sign-up-details"
            },
            "contentType": "text/html"
          }
        }
      }
    }

  ]
}