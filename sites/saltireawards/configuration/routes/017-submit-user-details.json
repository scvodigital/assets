{
  "name": "submit-user-details",
  "pattern": "/submit-user-details",
  "debug": true,
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "PVCode",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.account_pv-code"
      }
    },
    {
      "name": "saveUserData",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">context.metaData.handlebars.templates.account_user-body",
        "apexClassPath": "/SaltireUser/"
      }
    },
    {
      "name": "setSignUpStatus",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/{{default data.auth.uid 'no-such-write-profile'}}/signup-status",
        "setOrUpdate": "set",
        "dataTemplate": "{{#json}}{{{json key=\"status\" value=(if @root.data.PVCode \"pv-needed\" else=\"\")}}}{{/json}}"
      }
    },

    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{\"id\": {{{stringify @root.data.saveUserData}}} }",
        "parseJson": true
      }
    }
  ]
}