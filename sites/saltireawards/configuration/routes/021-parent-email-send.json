{
  "name": "parent-email-send",
  "pattern": "/parent-email-send",
  "debug": true,
  "acceptedVerbs": "POST",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "apexUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/SaltireUsers/?id={{@root.data.auth.uid}}"
      }
    },
    {
      "name": "accountInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "GET",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "EmailBody",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.account_verify-email"
      }
    },
    {
      "name": "postBody",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.account_user-body",
        "parseJson": true
      }
    },
    {
      "name": "saveUserData",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">data.postBody",
        "apexClassPath": "/SaltireUsers/"
      }
    },
    {
      "name": "setSignUpStatus",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/{{default data.auth.uid 'no-such-write-profile'}}/signup-status",
        "setOrUpdate": "set",
        "dataTemplate": "{{#json}}{{{json key=\"status\" value=(if @root.data.PVCode \"pv-needed\" else=\"\")}}}{{/json}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{\"id\": {{{stringify @root.data.postBody}}} }"
      }
    }
  ]
}