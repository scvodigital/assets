{
  "name": "update-hours",
  "pattern": "/update-hours",
  "method": "POST",
  "debug": true,
  "metaData": {
    "hideSearch": true,
    "title": "Account - Saltire Awards"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "apexUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/SaltireHours/?user_id={{@root.request.body.user_id}}"
      }
    },
    {
      "name": "hoursInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "GET",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "setHours",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/{{default data.auth.uid 'no-such-write-profile'}}/hours",
        "setOrUpdate": "set",
        "dataTemplate": "{{{stringify data.hoursInfo}}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{{#json}}{{{json key=\"success\" value=true}}}{{/json}}",
        "parseJson": true
      }
    }
  ]
}
