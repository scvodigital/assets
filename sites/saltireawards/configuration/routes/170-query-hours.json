{
  "name": "query-hours",
  "pattern": "/query-hours",
  "debug": true,
  "metaData": {
    "title": "Tasks - Saltire Awards"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.fullSignUpRequired",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.getTasksInfoUnverified",
    {
      "name": "codeVerified",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.tasks_hours-code-verify"
      }
    },
    {
      "name": "handlePassFail",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "==": [
              {
                "var": "data.codeVerified"
              },
              "pass"
            ]
          },
          null,
          "verify-hours-fail"
        ]
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_sample-hours-check",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }

  ]
}