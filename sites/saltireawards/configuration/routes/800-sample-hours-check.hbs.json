{
  "name": "sample-hours-check",
  "pattern": "/sample-hours-check",
  "debug": true,
  "metaData": {
    "title": "Tasks - Saltire Awards"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.fullSignUpRequired",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.getTasksInfo",
    {
      "name": "setVerifyHoursCode",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/{{default data.auth.uid 'no-such-write-profile'}}/verify-hours/",
        "setOrUpdate": "set",
        "dataTemplate": ">context.metaData.handlebars.templates.tasks_fb-verify-hours-data"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_sample-hours-check",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }

  ]
}