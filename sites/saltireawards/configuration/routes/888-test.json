{
  "name": "test-page",
  "pattern": "/test-page",
  "debug": true,
  "metaData": {
    "hideSearch": true,
    "title": "Account - Saltire Awards"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    {
      "name": "apexUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/SaltireUser/?id={{@root.data.auth.uid}}"
      }
    },
    {
      "name": "accountInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "GET",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "checkStatus",
      "taskModule": "reroute",
      "config": {
        "if":[{"==":[{"var": "data.accountInfo.external_id"}, null]},
          null,
          "redirect-home"
        ]
      }
    },
    {
      "name": "accountInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "GET",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_home"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}
