{
  "name": "testpage",
  "pattern": "/testpage",
  "debug": true,
  "acceptedVerbs": "GET,POST",
  "defaultParams": {
    "context": "results"
  },
  "metaData": {
    "emailType": "parent-verify"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.getAccountInfo",
    {
      "name": "send_email",
      "taskModule": "mailgun",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": true,
        "template": ">context.metaData.handlebars.templates.account_verify-email"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_test"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}