{{#with (getProperty @root.context.metaData.governanceCheckup (concat "section-" @root.request.params.query.section)) ~}}
  <div class="splash-image splash-image-{{default typeOverride @root.data.primaryResponse.hits.hits.[0]._type}}" style="{{> headers_splash_image}}">
    <div class="splash-overlay{{#if @root.data.primaryResponse.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
      <div class="container-fluid">
        <div class="mdc-layout-grid">
          <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
              <h1 class="header-text">
                <span class="header-text-banner">
                  {{#if title ~}}
                  {{#unless hide_overlay ~}}
                  {{{title}}}
                  {{#if sub_title ~}}
                  <span class="mdc-typography--caption">
                    {{{sub_title}}}
                  </span>
                  {{/if ~}}
                  {{/unless ~}}
                  {{else}}
                  404: Not found
                  {{/if ~}}
                </span>
              </h1>
            </div>
          </div>
        </div>
        {{#unless @root.data.primaryResponse.hits.hits.[0]._source.header_background ~}}
        {{> headers_caption}}
        {{/unless ~}}
      </div>
    </div>
  </div>
{{/with ~}}