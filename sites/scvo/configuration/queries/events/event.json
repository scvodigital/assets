    "booking_url",
    "rendered.json_ld",
    "date_start",
    "date_end",
    "trainer",
    "contact_name",
    "contact_email",
    "contact_phone",
    "costs",
    "cost_structures",
    "rate",
    "course_overview",
    "course_type",
    "aims",
    "description",
    "aimed_at",
    "url",
    "entry_requirements",
    "other_information",
    "places_available",
    "event_venue",
    "rendered.city",
    "geo.latitude",
    "geo.longitude",
    "venue_alt",
    "rendered.scvo_full",
    "rendered.scvo_speakers"
  ],
  "query": {
    "bool": {
      "should": [
        {{#if @root.request.params.id ~}}
        {
          "term": {
            "Id": "{{@root.request.params.id}}"
          }
        },
        {{/if ~}}
        {
          "term": {
            "event_slug": "events_{{@root.request.params.event_slug}}"
          }
        }
      ]
    }
  }
}
