{
  "size": 100,
  "_source": [
    "wpid",
    "slug",
    "title",
    "og_title",
    "og_summary",
    "content",
    "category",
    "text_bag_boost",
    "image_url",
    "Id"
  ],
  "query": {
    "bool": {
      "filter": [
        {{#if @root.request.params.category}}
          {
            "term": {
              "category": "{{@root.request.params.category}}"
            }
          },
        {{/if}}
        {
          "exists": {
            "field": "title_sort"
          }
        }
      ]
    }
  },
  "sort": [
    { "title_sort": { "order": "asc" } }
  ]
}