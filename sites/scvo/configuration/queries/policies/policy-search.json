{
  "size": 0,
  "query": {
    "bool": {
      "must": [
        {{#if @root.request.params.topic}}
        {
          "term": {
            "policy_topics_slugs": "{{@root.request.params.topic}}"
          }
        },
        {{/if ~}}
        {{#if @root.request.params.query.q}}
        {
          "query_string": {
            "query": {{{stringify (default request.params.query.q "")}}},
            "default_field": "text_bag",
            "default_operator": "AND",
            "analyzer": "snowball"
          }
        }
        {{else}}
        {
          "match_all": {}
        }
        {{/if}}
      ]
    }
  },
  "aggs": {
    "policies": {
      "terms": {
        "field": "policy_topics",
        "size": 10000
      },
      "aggs": {
        "top_policy_hits": {
          "top_hits": {
            "sort": [
              {
                "publish_on": {
                  "order": "desc"
                }
              }
            ],
            "_source": {
              "includes": [
                "publish_on",
                "title",
                "statement",
                "briefing",
                "press_release",
                "additional",
                "policy_topics",
                "policy_topics_slugs",
                "updated"
              ]
            },
            "size": 10000
          }
        }
      }
    }
  }
}