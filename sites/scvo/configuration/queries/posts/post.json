{
  "size": 1,
  "_source": [
    "wpid",
    "slug",
    "title",
    "sub_title",
    "og_title",
    "og_image",
    "og_summary",
    "rendered.scvo_full",
    "rendered.json_ld",
    "rendered.amp_full",
    "author",
    "author_name_full",
    "author_job_title",
    "author_organisation_name",
    "author_slug",
    "author_sfid",
    "categories",
    "categories_id",
    "header_background",
    "header_text",
    "hide_overlay",
    "is_press_release"
  ],
  "query": {
    "bool": {
      "should": [
        {{#if @root.request.params.id ~}}
        {
          "term": {
            "wpid": {{@root.request.params.id}}
          }
        },
        {{/if ~}}
        {{#if @root.request.params.slug}}
        {
          "term": {
            "post_slug": "post_{{@root.request.params.year}}_{{@root.request.params.month}}_{{@root.request.params.day}}_{{@root.request.params.slug}}"
          }
        },
        {{/if ~}}
        {
          "term": {
            "post_slug": "{{@root.request.params.path}}"
          }
        }
      ],
      "minimum_should_match": 1
    }
  }
}
