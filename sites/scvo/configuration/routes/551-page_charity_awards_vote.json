{
  "name": "vote_charity_awards",
  "pattern": "/scottish-charity-awards/vote-2019/*category/*vote",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "web-content-production",
          "type": "scvo-cms-charity-awards",
          "template": ">context.metaData.handlebars.queries.pages_charity-awards-vote",
          "noResultsRoute": "four_oh_four"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "goodhq",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "web-content-production",
          "type": "goodhq-organisation",
          "template": ">context.metaData.handlebars.queries.pages_charity-awards-goodhq"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "splash",
            "index": "web-content-production",
            "type": "scvo-cms-media",
            "template": ">context.metaData.handlebars.queries.pages_splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_charity-awards-vote",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}