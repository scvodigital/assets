<div class="search grant-search grant-cyber-search">
  <div class="splash-image splash-image-{{@root.data.primaryResponse.hits.hits.[0]._type}}-search" style="{{> header_splash_image}}">
    <div class="splash-overlay{{#if @root.data.primaryResponse.hits.hits.[0]._source.hide_overlay}} splash-overlay-hidden{{/if}}">
      <div class="container-fluid">
        <div class="mdc-layout-grid">
          {{#if @root.data.primaryResponse.hits.hits.[0]._source.header_text ~}}
          <img src="{{@root.data.primaryResponse.hits.hits.[0]._source.header_text}}" alt="{{@root.data.primaryResponse.hits.hits.[0]._source.title}}" class="header-text" />
          {{else}}
          <h1 class="header-text">
            <span class="header-text-banner">
              {{{@root.data.primaryResponse.hits.hits.[0]._source.title}}}
            </span>
          </h1>
          {{/if ~}}
        </div>
        {{> header_caption}}
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <ul class="breadcrumbs">
      <li><a href="/">Home</a></li>
      <li><a href="/digital">Digital</a></li>
      <li><a href="/digital/evolution">Evolution</a></li>
      <li><a href="/digital/evolution/cyber-resilience">Cyber Resilience and Cyber Essentials Grants</a></li>
      <li>{{{@root.data.primaryResponse.hits.hits.[0]._source.title}}}</li>
    </ul>
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12 content grant-content">
          {{{@root.data.primaryResponse.hits.hits.[0]._source.rendered.scvo_full}}}

          <hr />

          <!-- {{> search_info paging=@root.data.primaryResponse.pagination}} -->

          <div class="mdc-layout-grid equal-height v-margin">
            <div class="mdc-layout-grid__inner">
              {{#compare @root.data.supplimentaryResponses.grants.hits.total ">" 0 ~}}
              {{#each @root.data.supplimentaryResponses.grants.hits.hits ~}}
              {{#with _source ~}}
              <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-4-phone">
                <div class="mdc-card card scvo-grant scvo-grant-cyber">
                  <section class="mdc-card__primary">
                    <h3 class="mdc-card__title mdc-card__title--large">
                      {{{title}}}
                    </h3>
                  </section>
                  <section class="mdc-card__supporting-text">
                    <p class="mdc-typography--body1">
                      Charity registered in Scotland <a href="http://www.oscr.org.uk/about-charities/search-the-register/charity-details?number={{recipient_charity_number}}">{{recipient_charity_number}}</a><br />
                      <strong>Amount awarded:</strong> Â£{{addCommas amount_awarded}}<br />
                      {{#if actual_start ~}}
                      <strong>Project start:</strong> {{momentFormat (moment actual_start 'x') "Do MMM YYYY"}}
                      {{else}}
                      <strong>Date awarded:</strong> {{momentFormat (moment date_last_modified 'YYYY-MM-DDThh.mm.ss.0Z') "Do MMM YYYY"}}
                      {{/if ~}}
                    </p>
                  </section>
                </div>
              </div>
              {{/with ~}}
              {{/each ~}}
              {{else}}
              <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
                <p>
                  No results could be found, please try a different search.
                </p>
                <p>&nbsp;</p>
              </div>
              {{/compare ~}}
            </div>
          </div>

          {{> pagination paging=@root.data.primaryResponse.pagination}}
        </div>
      </div>
    </div>
  </div>
</div>
