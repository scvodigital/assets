<div class="page">
  {{> headers_splash_charity_awards title=@root.data.primaryResponse.hits.hits.[0]._source.sub_title}}
  <div class="container-fluid">
    <ul class="breadcrumbs" aria-hidden="true">
      <li><a href="/">Home</a></li>
      <li><a href="/scottish-charity-awards">Scottish Charity Awards</a></li>
      <li>Vote</li>
    </ul>
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content page-content">
          {{{@root.data.primaryResponse.hits.hits.[0]._source.rendered.scvo_full}}}

          {{#each @root.data.supplimentaryResponses.categories.aggregations.categories.buckets ~}}
          {{#if key}}
          <div class="{{key}} support mdc-card v-margin-full">
            <section class="mdc-card__primary">
              <h1 class="mdc-card__title mdc-card__title--large">
                <a href="{{@root.request.url.path}}/{{key}}">{{{getProperty @root.route.metaData.awards-info (concat key ".title")}}}</a>
              </h1>
            </section>
            <section class="mdc-card__supporting-text">
              {{{getProperty @root.route.metaData.awards-info (concat key ".description")}}}
            </section>
            <section class="mdc-card__actions"><a href="{{@root.request.url.path}}/{{key}}">View nominees</a></section>
          </div>
          {{/if}}
          {{/each ~}}
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar page-sidebar">
          {{> menus_charity_awards}}
        </div>
      </div>
    </div>
  </div>
</div>