<div class="page">
  {{> headers_splash_charity_awards title=@root.data.primaryResponse.hits.hits.[0]._source.title}}
  <div class="container-fluid">
    <ul class="breadcrumbs" aria-hidden="true">
      <li><a href="/">Home</a></li>
      <li><a href="/scottish-charity-awards">Scottish Charity Awards</a></li>
      <li><a href="/scottish-charity-awards/vote-2019">Vote</a></li>
      <li><a href="/scottish-charity-awards/vote-2019/{{@root.request.params.category}}">{{{getProperty @root.route.metaData.awards-info (concat @root.request.params.category ".title")}}}</a></li>
      {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
        <li>{{{title}}}</li>
      {{/with ~}}
    </ul>
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-9-desktop mdc-layout-grid__cell--span-5-tablet mdc-layout-grid__cell--span-4-phone content page-content">
          {{#with @root.data.primaryResponse.hits.hits.[0]._source ~}}
            <div class="v-margin-full">
              {{{content}}}
            </div>

            {{#unless @root.request.cookies.charity_awards_already_voted}}
              <h4>Vote for {{{title}}} in the {{{getProperty @root.route.metaData.awards-info (concat @root.request.params.category ".title")}}} category</h4>
              <script type="text/javascript" >document.write('<script src="http' + ( ("https:" == document.location.protocol) ? "s" : "") + '://www.surveygizmo.eu/s3/90139442/Scottish-Charity-Awards-2019-voting?__output=embedjs&vote={{slug}}&__ref=' + escape(document.location.origin + document.location.pathname) + '" type="text/javascript" ></scr' + 'ipt>');</script><style>.sg-survey{display:none; }</style>
            {{else}}
              {{#compare @root.request.cookies.charity_awards_already_voted @root.request.params.vote}}
                <h4>Leave a review on GoodHQ</h4>
                {{#each @root.data.goodhq.hits.hits}}
                  {{_source.title}}
                {{/each}}
                <h4>Volunteering opportunities</h4>

              {{else}}
                <h4>You have already voted in this years' awards</h4>
              {{/compare}}
            {{/unless}}
          {{/with ~}}
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-3-tablet mdc-layout-grid__cell--span-4-phone sidebar page-sidebar">
          {{> menus_charity_awards}}
        </div>
      </div>
    </div>
  </div>
</div>